{
  "name": "@pubinfo/monorepo",
  "type": "module",
  "version": "1.5.3-beta.2",
  "private": true,
  "packageManager": "pnpm@9.1.1",
  "author": {
    "name": "wsy"
  },
  "engines": {
    "node": "^18.12 || >=20.9",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "commit": "git cz",
    "bootstrap": "pnpm install",
    "dev": "pnpm --filter @pubinfo/script dev",
    "serve": "pnpm --filter @pubinfo/admin dev",
    "pub": "pnpm --filter @pubinfo/script pub",
    "build": "pnpm --filter @pubinfo/script selected:build",
    "prepack": "pnpm turbo run prepack --filter=./configs/* --filter=./scripts/*",
    "stub": "pnpm turbo run stub",
    "clean": "pnpm turbo run clean && rimraf node_modules",
    "svgo": "pnpm turbo run svgo",
    "reinstall": "pnpm turbo run clean && rimraf node_modules && pnpm run bootstrap",
    "preview": "pnpm --filter @pubinfo/admin preview",
    "preview:coverage": "http-server ./coverage -o",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "gen:version": "pnpm --filter @pubinfo/script version",
    "lint": "pnpm turbo run lint",
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "pnpm run prepack && pnpm gen:version",
    "release": "bumpp -r && changelog",
    "viewer:eslint-rule": "npx @eslint/config-inspector",
    "openapi": "pnpm turbo run openapi --filter=./apps/*",
    "dev-view": "npx taze -r ",
    "dev-update": "npx taze major -wr"
  },
  "dependencies": {
